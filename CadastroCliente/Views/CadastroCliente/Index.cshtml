@using CadastroClienteService.Model;
@model IEnumerable<ClienteEnderecoViewModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Clientes</h1>
        <a class="btn btn-success mx-2" asp-controller="CadastroCliente" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus mx-1"></i>Cadastrar novo cliente</a>
    </div>
    <table id="Cliente" class="table table-striped-columns">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">Idade</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Nome</th>
                        <td>@cliente.Sobrenome</td>
                        <td>@cliente.Idade</td>
                        <td>
                            <form method="post" asp-controller="CadastroCliente" asp-action="Excluir" asp-route-id="@cliente.Id">
                            <a asp-controller="CadastroCliente" asp-action="BuscarEndereco" asp-route-id="@cliente.Id" class="btn btn-primary mx-2">Buscar Endereço</a>
                            <a asp-controller="CadastroCliente" asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-1"></i>Editar</a>
                            <input type="hidden" asp-for="@cliente.Id"/>
                                <button id="Excluir" type="submit" onclick="return confirm('Tem certeza que deseja excluir o cliente selecionado?');" class="btn btn-danger mx-1"><i class="bi bi-trash"></i> Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>    
</div>